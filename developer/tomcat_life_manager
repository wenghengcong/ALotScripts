#!/bin/bash

case $1 in
start)
sh /Users/wenghengcong/Open/apache-tomcat-8.5.31/bin/startup.sh
;;
stop)
sh /Users/wenghengcong/Open/apache-tomcat-8.5.31/bin/shutdown.sh
;;
restart)
sh /Users/wenghengcong/Open/apache-tomcat-8.5.31/bin/shutdown.sh
sh /Users/wenghengcong/Open/apache-tomcat-8.5.31/bin/startup.sh
;;
*)
echo “Usage: start|stop|restart”
;;
esac

exit 0
